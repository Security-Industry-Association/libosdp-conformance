echo "Content-type: text/html"
echo ""

echo "<HTML><HEAD><TITLE>ACURXSIZE</TITLE>"
echo "<META HTTP-EQUIV=\"REFRESH\" CONTENT=\"1;URL=/Test-ACU.html\"><HEAD>"
echo "<BODY>"
echo "<BR>"
echo "<PRE>"
date
OSDP_PATH=/opt/osdp-conformance
CMDPATH=${OSDP_PATH}/tmp/open_osdp_command.json

# unilaterally clear out the last temp command
sudo -n rm -f ${CMDPATH}

sudo -n echo >${CMDPATH} "{\"command\":\"text\",\"message\":\"***OSDP CONFORMANCE TEST*** \"}"
sudo -n /opt/osdp-conformance/bin/open-osdp-kick ACU <${CMDPATH}
echo "Sent large text command."

echo "</PRE></BODY></HTML>"

